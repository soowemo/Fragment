<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="@+id/textView3"
    app:layout_constraintTop_toBottomOf="@+id/textView3"
    android:orientation="horizontal"
    tools:context=".SingUpNextFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        app:layout_marginStartPercent="25%"
        app:layout_marginTopPercent="5%"
        android:text="Lütfen Boş Alanları Doldurun"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="44dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="201dp"
        android:layout_height="40dp"
        android:layout_row="3"
        android:layout_column="1"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="338dp"
        app:layout_marginTopPercent="45%"
        app:layout_marginStartPercent="25%"/>

    <EditText
        android:id="@+id/adSoyadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:ems="10"
        android:hint="Ad Soyad"
        app:layout_marginTopPercent="25%"
        app:layout_marginStartPercent="25%"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="170dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="109dp"
        android:layout_height="42dp"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="center"
        android:text="Ad Soyad :"
        app:layout_marginTopPercent="25%"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="172dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="109dp"
        android:layout_height="41dp"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center"
        android:text="Cep Telefonu :"
        app:layout_marginTopPercent="35%"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="258dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="119dp"
        android:layout_height="44dp"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center"
        android:text="Şehir :"
        app:layout_marginTopPercent="45%"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="338dp" />

    <EditText
        android:id="@+id/cepTelefonuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        app:layout_marginTopPercent="35%"
        android:ems="10"
        android:hint="Cep Telefonu "
        app:layout_marginStartPercent="25%"
        android:inputType="number"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="255dp" />

    <EditText
        android:id="@+id/textAdres"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Adres"
        android:inputType="textMultiLine"
        app:layout_marginStartPercent="25%"
        app:layout_marginTopPercent="55%" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="118dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Adres :"
        app:layout_marginTopPercent="55%" />

    <Button
        android:id="@+id/singUpKaydetButton"
        android:layout_width="114dp"
        android:layout_height="58dp"
        android:text="Kaydet"
        app:layout_marginStartPercent="35%"
        app:layout_marginTopPercent="80%" />

</androidx.percentlayout.widget.PercentRelativeLayout>